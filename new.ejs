<% include ./partials/header %>
<div class="container">
    <div class="row" >
        <div class="col-md-4">
            
            <h1>New Blog</h1>
                <form action="/blogs" method="POST">
                    <div class="form-group">
                        <input class="form-control" type="text" class="form-control" name="blog[title]" placeholder="title">
                    </div>
                    <div class="form-group">
                        <input type="text" class="form-control" name="blog[image]" placeholder="image">
                    </div>
                    <div class="form-group">
                        <textarea class="form-control" name="blog[body]" placeholder=""></textarea>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-default" name="submit">Submit</button>
                    </div>
                </form>
            </div>
        </div>
</div>
<% include ./partials/footer %>