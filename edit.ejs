<% include ./partials/header %>
<div class="container">
    <div class="row" >
        <div class="col-md-4">
            
            <h1>Edit <%= blog.title%></h1>
                <form action="/blogs/<%= blog._id %>?_method=PUT" method="POST">
                    <div class="form-group">
                        <input class="form-control" type="text" class="form-control" name="blog[title]" value="<%= blog.title %>">
                    </div>
                    <div class="form-group">
                        <input type="text" class="form-control" name="blog[image]" value="<%= blog.image %>">
                    </div>
                    <div class="form-group">
                        <textarea class="form-control" name="blog[body]"><%= blog.body %></textarea>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-default" name="submit">Submit</button>
                    </div>
                </form>
            </div>
        </div>
</div>
<% include ./partials/footer %>